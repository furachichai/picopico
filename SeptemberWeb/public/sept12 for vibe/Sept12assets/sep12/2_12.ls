global oG,oSoundproperty pEnabledon beginsprite me  cursor 0    cursor 200    sprite(me.spritenum).locZ=oG.TARGETDEPTH      me.pEnabled=trueendon prepareFrame me  -- THE TARGET NEEDS TO BE UPDATED ON prepareFrame, OTHERWISE DURING THE FIRST FRAME THE TARGET WOULDN'T REFLECT THE MOUSE POSITION.  thex=the mouseH  they=the mouseV  if thex<0 then    sprite(me.spritenum).locH=0      else if thex>=oG.SCREENX then    sprite(me.spritenum).locH=oG.SCREENX-1      else    sprite(me.spritenum).locH=thex  end if    if they<0 then    sprite(me.spritenum).locV=0      else if they>=oG.SCREENY then    sprite(me.spritenum).locV=oG.SCREENY-1      else    sprite(me.spritenum).locV=they  end if    endon mIsEnabled me  return me.pEnabledendon mDisable me  me.pEnabled=false  sprite(me.spritenum).goToFrame(1)    sprite(me.spritenum).play()endon mEnable me  me.pEnabled=trueendon exitFrame me  if not me.mIsEnabled() then    if sprite(me.spritenum).frame=sprite(me.spritenum).member.frameCount then      sprite(me.spritenum).mEnable()      end if      end if    end